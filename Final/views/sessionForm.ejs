<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;400;500;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/servicesPageCss.css">
</head>
<body>
    <div class="Form-user">
        <h1 class="m-5">Calculator</h1>
        <div id="form-container" class="mx-5 p-4 shadow rounded">
            <form method="post" action="/calculate">
                <div class="form-group form-control-lg">
                    <label for="operand1">Operand 1</label>
                    <input type="number" class="form-control" id="operand1" placeholder="Enter operand 1" name="operand1">
                </div>
                <div class="form-group form-control-lg">
                    <label for="operand2">Operand 2</label>
                    <input type="number" class="form-control" id="operand2" placeholder="Enter operand 2" name="operand2">
                </div>
                <div class="form-group form-control-lg">
                    <label for="operation">Operation</label>
                    <select class="form-control" id="operation" name="operation">
                        <option value="+">+</option>
                        <option value="-">-</option>
                        <option value="/">/</option>
                        <option value="*">*</option>
                    </select>
                </div>
                <button class="btn btn-primary btn-block add-btn mx-3 my-3" type="submit">Calculate</button>
            </form>

            <% if (results && results.length > 0) { %>
                <h2 class="mt-4">Calculation Results</h2>
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Operand 1</th>
                            <th scope="col">Operand 2</th>
                            <th scope="col">Operation</th>
                            <th scope="col">Result</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(result => { %>
                            <tr>
                                <td><%= result.operand1 %></td>
                                <td><%= result.operand2 %></td>
                                <td><%= result.operation %></td>
                                <td><%= result.result %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</body>
</html>
